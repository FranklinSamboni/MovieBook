<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="initialmovie"
            type="com.frank.moviebook.data.Movie" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/main_linear_layout"
        tools:context="com.frank.moviebook.movies.ui.MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/tool_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/app_title"
                                style="@style/TextAppearance.AppCompat.Title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/app_name"
                                android:textAlignment="center"
                                android:textColor="@color/colorAccent" />

                            <ImageButton
                                android:layout_alignRight="@+id/app_title"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@android:drawable/ic_search_category_default"
                                android:backgroundTint="@color/colorAccent"
                                />

                        </RelativeLayout>

                    </android.support.v7.widget.Toolbar>
                </android.support.design.widget.AppBarLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/app_bar">

                    <ImageView
                        android:id="@+id/initial_movie"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/initial_movie_img_height"
                        android:background="@color/colorAccent"
                        android:scaleType="centerCrop"
                        app:loadImage="@{initialmovie.backdropPath}"/>
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/initial_movie_img_height"
                        android:background="@drawable/movie_mask"
                        />

                    <TextView
                        android:id="@+id/initial_movie_text"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/initial_movie"
                        android:padding="10dp"
                        android:textColor="@color/colorAccent"
                        android:text="@{initialmovie.title}"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/category_recicler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/initial_movie" />

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

</layout>